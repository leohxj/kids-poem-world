---
const { articleId } = Astro.props;
---
<div class="mt-8 border-t pt-6">
  <h3 class="text-xl font-bold mb-4">评论</h3>
  <div class="space-y-4">
    <!-- 添加评论功能 -->
    <form class="space-y-4">
      <textarea
        class="w-full p-3 border rounded-lg"
        placeholder="分享您的想法..."
      ></textarea>
      <button
        class="px-4 py-2 bg-blue-600 text-white rounded-lg"
        type="submit"
      >
        提交评论
      </button>
    </form>
  </div>
</div>
